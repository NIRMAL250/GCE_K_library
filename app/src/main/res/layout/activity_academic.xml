<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#244d49">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/academicCSE"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/radius3"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="CSE"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/academicECE"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/radius3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="ECE"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/academicEEE"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/radius3"
            android:layout_below="@+id/academicCSE"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="EEE"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/academicME"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/radius3"
            android:layout_below="@+id/academicECE"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="ME"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/academicCE"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@drawable/radius3"
            android:layout_below="@+id/academicEEE"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="CE"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>